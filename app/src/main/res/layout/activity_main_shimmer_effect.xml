<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:background="#25323F"
    android:layout_height="match_parent"
    tools:context=".shimmerEffect.MainShimmerEffectActivity">

    <TextView
        android:id="@+id/txtView_heading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/you_ve_finished_the_meditation"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/main"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_see_my_statistics"
        app:layout_constraintTop_toBottomOf="@+id/txtView_heading"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_see_my_statistics"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/see_my_statistics"
        android:textColor="#22263C"
        android:textStyle="bold"
        android:backgroundTint="#ADDBD6"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>